<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frg_download"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_frg_download_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/mapnavigation_download_message" />

     <TextView
        android:id="@+id/lbl_empty" android:text="" 
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:id="@+id/frg_riga1">
         
	     <Button
	         android:id="@+id/frg_download_button1"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Button" />

	     <TextView
	         android:id="@+id/lbl_frg_download_completeDownload"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:gravity="top"
	         android:text="@string/mapnavigation_download_yesbutton" />
	     
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:id="@+id/frg_riga2">
         
	 	<Button
	         android:id="@+id/frg_download_button2"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Button" />

	 	<TextView
	 	    android:id="@+id/lbl_frg_download_singleDownload"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:gravity="top"
	 	    android:text="@string/mapnavigation_download_nobutton" />
	     
     </LinearLayout>

    
</LinearLayout>
